#include "map.h"


void OccupancyGrid::init(int lmap_w, int lmap_h, double lmap_res, int gmap_w, int gmap_h,
        double gmap_res, int sat, int neff, double logodd_o, double logodd_f)
{
    lmap.info.width = lmap_w;
    lmap.info.height = lmap_h;
    lmap.info.resolution = lmap_res;
    lmap.info.origin.position.x = 0;
    lmap.info.origin.position.y = 0;
    lmap.info.origin.position.z = 0;
    lmap.info.origin.orientation.x = 0;
    lmap.info.origin.orientation.y = 0;
    lmap.info.origin.orientation.z = 0;
    lmap.info.origin.orientation.w = 1;
    gmap.info.width = gmap_w;
    gmap.info.height = gmap_h;
    gmap.info.resolution = gmap_res;
    gmap.info.origin.position.x = 0;
    gmap.info.origin.position.y = 0;
    gmap.info.origin.position.z = 0;
    gmap.info.origin.orientation.x = 0;
    gmap.info.origin.orientation.y = 0;
    gmap.info.origin.orientation.z = 0;
    gmap.info.origin.orientation.w = 1;
    //lmap_pub = n.advertise<nav_msgs::OccupancyGrid>("lmap", 1000);
    //gmap_pub = n.advertise<nav_msgs::OccupancyGrid>("gmap", 1000);
}